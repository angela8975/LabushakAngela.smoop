<Page x:Class="LabWPF_1.Task2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LabWPF_1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Background="White"
      Title="Task2">

    <Grid>
        <DockPanel Margin="100" LastChildFill="False">
            <Button DockPanel.Dock="Left" Content="Hide" Height="50" Width="100" FontSize="18" Click="Hide_Click"/>
            <Button DockPanel.Dock="Right" Content="Show" Height="50" Width="100" FontSize="18" Click="Show_Click"/>
            <TextBlock x:Name="Kyky" Text="Ky-ky"
                       DockPanel.Dock="Top" 
                       TextAlignment="Center"
                       FontSize="20"
                       Visibility="Visible"/>
            <Button DockPanel.Dock="Bottom" Content="Task 3" Width="100" Click="Task3_Click"/>
        </DockPanel>
        <Frame x:Name="Task3" NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>
