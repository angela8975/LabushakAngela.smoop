<Page x:Class="LabWPF_1.Task3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LabWPF_1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" Background="White"
      Title="Task3">

    <Grid>
        <StackPanel>
            <TextBox x:Name="incomingText" Width="400" Height="30" 
         Text="Enter somesting..." FontSize="16" Background="Bisque" Margin="0,20,0,10"/>
            <TextBlock Text="Choose the action:" 
               FontSize="22" 
               HorizontalAlignment="Center"
               Margin="0,20,0,10"/>
            <StackPanel Margin="30" Orientation="Horizontal">
            
            <Button Content="Hide" Height="50" Width="200" HorizontalAlignment="Left" FontSize="24" Margin="20" Click="HideText_Click"/>
            <Button Content="Show" Height="50" Width="200" HorizontalAlignment="Left" FontSize="24" Margin="20" Click="ShowText_Click"/>
            <Button Content="Delete" Height="50" Width="200" HorizontalAlignment="Left" FontSize="24" Margin="20" Click="DeleteText_Click"/>
        </StackPanel>
            <Button Content="Task 4" Width="100" Click="Task4_Click" Margin="0,50,0,0"/>
        </StackPanel>
        <Frame x:Name="Task4" NavigationUIVisibility="Hidden"/>
    </Grid>
</Page>
