<Window x:Class="WpfLinqApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfLinqApp"
        mc:Ignorable="d"
        Title="Аналіз співробітників (LINQ)" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <WrapPanel Grid.Row="0" Margin="0,0,0,10">
            <Button Content="Працівники > 35 років" 
                    x:Name="btnQuery1" 
                    Click="BtnQuery1_Click" 
                    Margin="5" Padding="5"/>

            <Button Content="Max зарплата (II півр.)" 
                    x:Name="btnQuery2" 
                    Click="BtnQuery2_Click" 
                    Margin="5" Padding="5"/>

            <Button Content="Зарплата менше середньої" 
                    x:Name="btnQuery3" 
                    Click="BtnQuery3_Click" 
                    Margin="5" Padding="5"/>

            <Border Background="#f0f0f0" CornerRadius="5" Padding="10" Margin="5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Мін. зарплата (рік):" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox x:Name="txtMinSalary" Width="100" VerticalAlignment="Center"/>
                    <Button Content="Вища освіта + ЗП" 
                            x:Name="btnQuery4" 
                            Click="BtnQuery4_Click" 
                            Margin="5,0,0,0" Padding="5"/>
                </StackPanel>
            </Border>
        </WrapPanel>

        <DataGrid Grid.Row="1" 
                  x:Name="resultsGrid" 
                  IsReadOnly="True" 
                  AutoGenerateColumns="True"
                  ItemsSource="{Binding}"
                  HorizontalGridLinesBrush="LightGray"
                  VerticalGridLinesBrush="LightGray"/>

        <StatusBar Grid.Row="2" Margin="0,5,0,0">
            <StatusBarItem>
                <TextBlock x:Name="statusBarText" Text="Будь ласка, завантажте дані (додаток завантажує їх при старті)"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
